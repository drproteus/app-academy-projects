<h1>Inbox</h1>
<%= "so lonely :'[" if @received_messages.empty? %>
<ul class="messages col-md-8">
<% @received_messages.each do |message| %>
  <li class="well"><strong><%= link_to message.subject, message_url(message) %><%= " (unread)" unless message.viewed %></strong> from <%= link_to message.author.email, user_url(message.author) %><p>sent: <%= message.created_at %></p>
    <%= button_to "Delete", message_url(message), method: :delete, class: "btn btn-xs btn-danger" %>
  </li>
<% end %>
</ul>