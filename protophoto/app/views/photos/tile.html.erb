<style>
  body {
    background: url("<%= @photo.image.url(:large) %>");
    background-position: top center;
    text-align: center;
  }
  h1 {
    font-size: 4em;
    color: white;
    text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
  }
  h1:before {
    content: "« "
  }
  h1:after {
    content: " »";
  }
</style>
<h1><%= @photo.title %></h1>
<p><%= link_to "back to photo", photo_url(@photo) %></p>