<div class="album-description"><%= markdown(@album.description) %></div>

<% if current_user == @album.owner %>
  <br>
  <%= link_to "Edit Album", edit_album_url(@album), method: :get, class: "btn btn-default btn-xs btn-warning" %>
  <%= link_to "Delete Album", album_url(@album), method: :delete, class: "btn btn-default btn-xs btn-danger" %>
<% end %>